<div class="container mt-3">
  <h1>Restaurants</h1>
  <div class="row mt-3">
    <% @restaurants.each do |restaurant| %>
    <div class="col-6 col-md-4 col-lg-3">
      <div class="card m-1 shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary fw-light"><%= restaurant.address %></h6>
          <p class="card-text"><%= restaurant.category.capitalize %> cuisine</p>
          <%= link_to "Show details", restaurant_path(restaurant), class: "btn btn-outline-success" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
