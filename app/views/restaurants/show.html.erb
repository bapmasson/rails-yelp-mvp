<div class="container">
  <div class="mt-3 border border-light rounded shadow-sm">
    <div class="text-center">
      <h1><%= @restaurant.name %></h1>
      <h2 class="fw-light"><%= @restaurant.category.capitalize %> cuisine</h2>
      <p class="fst-italic fw-light">
        <%= @restaurant.address %>
        <%= @restaurant.phone_number %>
      </p>
    </div>
    <div class="d-flex justify-content-around">
      <div class="p-3">
        <h3>Customers Reviews</h3>
        <% @restaurant.reviews.each do |review| %>
        <div class="d-flex">
          <p><%= review.rating %>‚≠ê</p>
          <p class="fst-italic fw-light">"<%= review.content %>"</p>
        </div>
        <% end %>
      </div>
      <div class="border my-3"></div>
      <div class="p-3">
        <h3>Leave a review</h3>
        <%= simple_form_for [@restaurant, @review] do |f| %>
          <%= f.input :rating %>
          <%= f.input :content %>
          <%= f.submit "Leave Review", class: "btn btn-outline-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
