<div class="container">
  <div class="mt-3 border border-light rounded shadow-sm">
    <div class="text-center">
      <h1><%= @restaurant.name %></h1>
      <h2 class="fw-light"><%= @restaurant.category.capitalize %> cuisine</h2>
      <p class="fst-italic fw-light">
        <%= @restaurant.address %>
        <%= @restaurant.phone_number %>
      </p>
    </div>
    <div class="p-3">
      <h3>Customers Reviews</h3>
      <% @restaurant.reviews.each do |review| %>
        <p>
          Rating : <%= review.rating %>/5 | "<%= review.content %>"
        </p>
      <% end %>
    </div>
  </div>

</div>
